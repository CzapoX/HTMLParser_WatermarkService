@{
    ViewData["Title"] = "DataImport";
}

<form class="form-inline" method="post">
    <div class="form-group mx-sm-3 mb-2">
        <label for="url" class="sr-only">URL for Profile</label>
        <input type="url" class="form-control" name="url" placeholder="URL">
    </div>
    <div class="form-check">
        <select name="importSource">
            <option selected disabled>--Wybierz--</option>
            <option value="etsy">Etsy</option>
            <option value="pakamera">Pakemera</option>
        </select>
    </div>
    <button type="submit" asp-action="ImportData" class="btn btn-primary mb-2">Import Data</button>
</form>